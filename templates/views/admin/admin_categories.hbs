<html lang="en">

<head>
    {{>admin_header}}
</head>

<body>
    {{>admin_navbar}}

    {{>admin_sidebar}}
    <div class="col-md-9 mx-auto ms-sm-auto col-lg-8 px-md-4">
        <h1 class="text-center text-success">Categories</h1>
        <a href="/admin/categories/add-category" class="btn btn-small btn-primary">Add A category</a>
        <h2 class="text-center text-danger text-uppercase">{{message}}</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Show in nav?</td>
                    <td>Title </td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                {{#each cats}}
                <tr>
                    <td>
                        {{#if this.show}}
                        <a href="/admin/categories/show/{{this.slug}}?action=hide"
                            class="fa fa-check btn btn-success"></a>
                        {{else}}
                        <a href="/admin/categories/show/{{this.slug}}?action=show"
                            class="fa fa-times btn btn-warning"></a>
                        {{/if}}
                    </td>
                    <td>{{this.title}}</td>
                    <td>
                        <a href="/admin/categories/edit/category/{{this.id}}" class="fa fa-pencil text-success btn"></a>
                        <a href="/admin/categories/delete/category/{{this.id}}" class="fa fa-trash text-danger btn"
                            onclick="return confirm('Are you sure you want to delete this Category?');"></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{>admin_footer}}
</body>

</html>