<html lang="en">

<head>
    {{>admin_header}}
</head>

<body>
    {{>admin_navbar}}

    {{>admin_sidebar}}
    <div class="col-md-9 mx-auto ms-sm-auto col-lg-8 px-md-4">
        <h1 class="text-Primary text-center">{{title}}</h1>
        <a href="/admin/slides" class="btn btn-primary btn-large">Back </a>
        {{#each SlideShow}}
        <h2 class="text-lead text-center text-secondary"> # slide show content</h2>
        <form action="/admin/slides/edit_slideshow/{{this.id}}" method="post" enctype="multipart/form-data">
            <label for="heading">Heading</label>
            <input type="text" id="heading" class="form-control" name="heading" value="{{this.heading}}">
            <label for="content">Content</label>
            <input type="text" id="content" class="form-control" name="content" value="{{this.content}}">
            <label for="current-image">Current Image</label>
            <figure id="current-image">
                <img width="400" src="/slideshow_images/{{this.image}}" alt="cannot load image {{this.image}}">
            </figure>
            <label for="image">Update Image</label>
            <input type="file" name="image" id="image" class="form-control">
            <button type="submit" class="mt-1 btn btn-success">Save Changes</button>
            <a href="/admin/slides/delete_slideshow/{{this.id}}/{{this.image}}" class=" mt-1 btn btn-danger"
                onclick="return confirm('Are you sure you want to delete this Item?');">Delete Item</a>
        </form>
        <hr>
        {{/each}}
    </div>
    {{>admin_footer}}
</body>

</html>